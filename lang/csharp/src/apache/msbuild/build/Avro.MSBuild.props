<Project TreatAsLocalProperty="TaskFolder;TaskAssembly">
  <PropertyGroup>
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' == 'Core' ">netstandard2.0</TaskFolder>
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' != 'Core' ">net45</TaskFolder>
    <TaskAssembly>$(MSBuildThisFileDirectory)..\tools\$(TaskFolder)\Avro.MSBuild.dll</TaskAssembly>
  </PropertyGroup>

  <UsingTask TaskName="AvroCodeGen" AssemblyFile="$(TaskAssembly)" />
</Project>
